<%- include("partials/header")%>
<style>
	body{
		background-color:#3da4ab;
	}
	form{
		width:50%;
		margin:5px auto;
	}
	h1{
		color:white;
		text-shadow: 5px 5px 10px black;
	}
	input{
		box-shadow: 2px 2px 5px black;
	}
</style>
<h1 class="text-center">EDIT THE PROFILE</h1>
<div class="container">
	<div class="row">
		<div class="col-md-12 col-sm-12">
<form action="/student/<%=student.id%>?_method=PUT" method="POST">
	<div class="form-group">
	<input type="text" class="form-control" value="<%= student.name%>" name="student[name]">
	</div>
	<div class="form-group">
	<input type="text" value="<%=student.dob%>" class="form-control" name="student[dob]">
	</div>
	<div class="form-group">
	<input type="text" value="<%=student.address%>" class="form-control" name="student[address]">
	</div>
	<div class="form-group">
	<input type="text" value="<%=student.phone%>" class="form-control" name="student[phone]">
	</div>
	<div class="form-group">
	<input type="text" value="<%=student.designation%>" class="form-control" name="student[designation]">
	</div>
	<div class="form-group">
	<input type="text" value="<%= student.favlang%>" class="form-control" name="student[favlang]">
	</div>
	<button type="submit" class="btn  btn-success">Submit</button>
	<button type="reset" class="btn btn-danger">Reset</button>
</form>
</div>
</div>

<%- include("partials/footer")%>
