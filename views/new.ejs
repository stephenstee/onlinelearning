<%- include("partials/header")%>
<style>
	div{
		margin: 5px 0;
	}
	h1{
		text-decoration-line: underline;
		text-decoration-color: red;
	}
	form{
		width:60%;
		margin: 5px auto;
	}
</style>
<h1 class="display-3 text-center text-uppercase">Create A New Course</h1>
<div class="container">
<form action = "/home" method="POST" >
	<div class="form-group">
	<input type="text" class="form-control" placeholder="TITLE" name="course[title]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="IMAGE" class="form-control" name="course[image]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="DESCRIPTION" class="form-control" name="course[description]">
    </div>
	<div class="form-group">
	<input type="text" class="form-control" placeholder="MATERIAL" name="course[material]">
    </div>
	<div class="form-group">
	<input type="text" class="form-control" placeholder="MATERIAL-DESCRIPTION" name="course[materialdesc]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="MATERIAL-LINK" class="form-control" name="course[materiallink]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="TEST" class="form-control" name="course[test]">
    </div>
	<div class="form-group">
	<input type="text" class="form-control" placeholder="TEST-DESCRIPTION" name="course[testdesc]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="TEST-LINK" class="form-control" name="course[testlink]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="EXERCISE" class="form-control" name="course[exercise]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="EXERCISE-DESCRIPTION" class="form-control" name="course[exercisedesc]">
    </div>
	<div class="form-group">
	<input type="text" placeholder="EXERCISE-LINK" class="form-control" name="course[exerciselink]">
    </div>
<button class="btn btn-success btn-block">Submit</button>
</form>
</div>
<%- include("partials/footer")%>
