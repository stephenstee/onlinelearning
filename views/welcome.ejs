<%- include("partials/header")%>

	<style>
		body{
			background-image: linear-gradient(152deg,#b4f2e1 50%,#007892 50%);
			height: 100vh;
		}
		h1{
			position: absolute;
			top:50%;
			left: 50%;
			transform: translate(-50%,-50%);
			text-transform: uppercase;
			font-family: 'Arial Black',
			color: transparent;
			font-size: 100px;
		}
		h1::before, h1::after{
			content: attr(data-text);
			position: absolute;
			width: 100%;
			height: 100%;
			z-index: -1;
		}
		h1::before{
			top:0;
			left:0;
			clip-path: polygon(0 0,70% 0, 30% 100%,0 100%);
			color: #111;
		}
		h1::after{
			bottom: 0;
			right: 0;
			clip-path: polygon(100% 0,70% 0,30% 100%,100% 100%);
			color: #D92027;
		}
	</style>
	<h1>Coding Area</h1>
